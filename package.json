{
  "name": "create-react-app-typescript-node",
  "version": "0.1.0",
  "private": true,
  "main": "build/server/index.js",
  "dependencies": {
    "express": "4.16.3",
    "http-status-codes": "1.3.0",
    "lodash": "4.17.10",
    "path": "0.12.7",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-scripts-ts": "2.17.0"
  },
  "scripts": {
    "install": "concurrently --kill-others-on-fail \"cd client && yarn install\"",
    "clean": "rm -rf build && rm -rf client/build",
    "deploy": "yarn run clean && yarn run build && git push heroku master",
    "deploy-dev": "yarn run clean && yarn run build && heroku local",
    "test": "concurrently --kill-others-on-fail \"cd client && yarn run test\" \"yarn run test-server\"",
    "test-server": "jest",
    "start": "concurrently --kill-others-on-fail \"yarn run server\" \"yarn run client\"",
    "build": "tsc && yarn build-client && yarn run copy-json",
    "build-client": "concurrently --kill-others-on-fail \"cd client && yarn run build && cd - && cp -r client/build build/server/build\"",
    "client": "cd client && react-scripts-ts start",
    "copy-json": "cp server/events.json build/server/events.json",
    "server": "concurrently --kill-others-on-fail \"yarn build && nodemon build/server/index.js\" \"tsc -w\""
  },
  "devDependencies": {
    "@types/express": "4.16.0",
    "@types/jest": "23.3.1",
    "@types/lodash": "4.14.116",
    "@types/node": "10.9.4",
    "concurrently": "4.0.1",
    "nodemon": "1.18.4",
    "supertest": "3.1.0",
    "ts-jest": "23.1.4",
    "typescript": "3.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "app.test.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
